// work with font-size 10px instead of 16px
:root {
    font-size: 70%; /* 62.5% - 1rem = 10px */
}

*, html, body {
    margin: 0;
    padding: 0;
    font-size: 1.6rem;
    z-index: 1;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    font-smoothing: antialiased;
    font-weight: 400;
}

body {
    min-width: 28.5rem;
    background-image: url({{ 'background.svg' | asset_url }});
    background-repeat: repeat;
    background-position: center top;
}

html {
    scroll-padding-top: 50px;
    font-family: 'Roboto', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

html.no-js .no-js-hidden {
  display: none !important;
}

main {
    width: 100%;
    overflow-x: hidden;
}

h1 {
  color: #1E1E1E;
  font-family: 'Comfortaa', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 2rem;
  font-weight: 400;
  text-transform: uppercase;
}

h2 {
  color: #1E1E1E;
  font-family: 'Comfortaa', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 2rem;
  font-weight: 400;
  text-transform: uppercase;
  text-align: center;
  padding-bottom: 16px;
}

h3 {
    letter-spacing: 0.05rem;
    font-family: 'Comfortaa', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 1.4rem;
    font-weight: normal;
    font-weight: bold;
    text-transform: uppercase;
    text-align: center;
}

.logo, .nav_bar .logo {
    color: #fff;
    font-family: 'Comfortaa', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 2.4rem;
    margin: auto;
    width: 12rem;
    height: auto;
    padding: 0;
    text-align: center;
    text-decoration: none;
    letter-spacing: .4rem;
    font-weight: 700;
    text-transform: lowercase;
}

.page_content {
    padding-top: 56px;
    background-color: #fff;
}

.page_content + * {
    z-index: 1;
}
  
.closeDrawer {
  position: fixed;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  background: rgba(82, 82, 82, 0.5);
  z-index: 2;
  display: none;
  opacity: 0;
  pointer-events: none;
}

details > summary::-webkit-details-marker {
    display: none;
}
  
.desktop-only { display: none; }

.js-enabled { display: none; }

.js-inline { display: none; }

.js .js-enabled { display: block; }

.js .js-inline { display: inline-block; }

.js .no-js { display: none; }

@media (min-width: 800px) {
    .mobile-only { display: none; }
}

@media (min-width: 1024px) {
    .page_content, .footer_content {
        background-color: #fff;
        // max-width: 1024px;
        max-width: 1366px;
        margin: auto;
    }
    body {
        width: 100%;
        background-color: #C8C8C8;
    }
}