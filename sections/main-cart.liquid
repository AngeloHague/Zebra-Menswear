<div class=cart>
  {% if cart.item_count > 0 %}
    <h1 class='title'>Your Cart</h1>
    <form action="/cart" method="post">
      <div class='cart-items'>
        {% for item in cart.items %}
          <div class='cart-item'>
            <div class='image'>
              <a href="{{ item.url | within: collections.all }}">
                <img src="{{ item | img_url: 'small' }}" height='100%' alt="{{ item.title | escape }} ">
              </a>
            </div>
            <div class='details'>
              <a href="{{ item.url }}"><div class='price'>
                {{ item.price | money }}
                
              </div>
              <div class='product-title'>
                {% render 'filtered-product-title' with item.product.title %}
              </div> </a>
              <div class='variant'>
                {{ item.variant.title }}
                  - Qty 
                  {% if item.variant.inventory_policy == 'continue' %}

                  <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0" max='-Inf'>
                  {% else %}
                    <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity}}" min="0" max='{{item.variant.inventory_quantity}}'>
                  {% endif %}
                </div>
              </div>
              <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">
                <div class='remove-button'>{% render 'icon-x' %}</div>
              </a>
          </div>
        {% endfor %}
        <p class='subtotal'>Subtotal : {{ cart.total_price | money }}</p>
      </div>
      <div class='checkout-buttons'>
        <p class='subtotal'>Subtotal : {{ cart.total_price | money }}</p>
        <button class='button black' type="submit" name="update">Update Cart</button>
        <button class='button black' type="submit" name="checkout">Checkout</button>
        {% if additional_checkout_buttons %}
          <div class="additional-checkout-buttons">
            {{ content_for_additional_checkout_buttons }}
          </div>
        {% endif %}
      </div>
    </form>
  {% else %}
  <div class='empty-cart'>
    <p>Nothing in here.</p>
    <div class='cart-vector'>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
    </div>
    <p>Browse our store and add something to your cart!</p>
  </div>
  {% endif %}
</div>

{% schema %}
    {
        "name": "Cart Contents",
        "settings": []
    }
{% endschema %}

{% style %}
.cart .title, .cart-item, .cart table, .cart .button, .cart .subtotal, .empty-cart p {
  font-family: 'Roboto', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.cart .title {
  font-style: normal;
  font-weight: 500;
  font-size: 1.6rem;
  text-transform: uppercase;
  padding: 16px 0 8px 16px;
  /* display: none; */
}

.cart-items {
  padding: 0 16px;
  box-sizing: border-box;
}

.cart-items .remove-button {
  padding: 4px;
}

.cart-item {
  padding: 16px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: solid 1px #ccc;
}

.cart-item:last-of-type {
  border-bottom: solid 1px #ccc;
}

.cart .cart-item .image {
  max-width: 100px;
  height: 100px;
}

.cart .cart-item .details {
  display: flex;
  flex-direction: column;
  padding: 0 8px;
}

.cart .cart-item .variant input {
  text-align: center;
  width: 3.2rem;
  font-size: 1.3rem;
}

.cart .cart-item .details div, .cart .cart-item .details span {
  font-size: 1.3rem;
}

.cart .product-title {
  font-size: 1.5rem;
}

.cart .price, .cart .variant {
  font-weight: 500;
}

.cart table {
  width: calc(100% - 32px);
  margin: 16px;
}

.cart tr {
}

.cart thead tr {
  /* text-align: left; */
  display: grid;
  grid-template-columns: 1fr 15% 15% 24px;
}

.cart th {
  font-size: 1.4rem;
  font-weight: 500;
  text-transform: uppercase;
}

.cart th:first-of-type {
  text-align: left;
  padding-left: 8px;
}

.cart tbody tr {
  display: grid;
  grid-template-columns: 20% 1fr 15% 15% 24px;
  justify-items: center;
  place-items:  center;
  margin-top: 8px;
}

.cart td, .cart td a {
  font-size: 1.3rem;
  /* font-weight: 500; */
}

.cart td a {
  margin: auto;
}

.cart table img {
  /* width: 70px;
  height: 70px; */
  width: 100%;
  aspect-ratio: 1 / 1;
  object-fit: contain;
}

.cart table input {
  font-size: 1.2rem;
  line-height: 2.6rem;
  width: 32px;
  border: solid 1px #bbb;
  border-radius: 15%;
  text-align: center;
}

.cart a {
  color: black;
  text-decoration: none;
}


.cart .subtotal {
  text-align: center;
  padding: 8px 0;
  /* border-bottom: solid 1px #ccc; */
}

.checkout-buttons {
  width: 100%;
  box-sizing: border-box;
  padding: 0 16px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.checkout-buttons .subtotal {
  display: none;
}
.cart .button {
  font-size: 1.2rem;
  text-transform: uppercase;
  width: 100%;
  padding: 4px 0;
  margin-top: 8px;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  /* height: 300px; */
  margin: auto;
  justify-content: center;
  align-items: center;
}


.empty-cart p {
  width: 70%;
  text-align: center;
  font-weight: 500;
  font-size: 1.8rem;
  margin: 24px 0;
}

.empty-cart p:last-child {
  margin-bottom: 0;
}

.empty-cart .cart-vector, .empty-cart svg {
  width: 96px;
  height: 96px;
  stroke-width: 1;
}

.empty-cart .cart-vector {
}

{% endstyle %}

