<div class=cart>
  {% if cart.item_count > 0 %}
    <h1 class='title'>Your Cart</h1>
    <form action="/cart" method="post">
      <table>
        <thead>
          <th colspan='6'>Product</th>
          {% comment %} <th>Price</th> {% endcomment %}
          <th colspan='1'>Qty</th>
          <th colspan='3'>Price</th>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr>
              <td colspan='1'>
                <a href="{{ item.url | within: collections.all }}">
                  <img src="{{ item | img_url: 'small' }}" alt="{{ item.title | escape }}">
                </a>
              </td>
              <td colspan='5'>
                <a href="{{ item.url }}">{% render 'filtered-product-title' with item.product.title %} - {{ item.variant.title }}</a>
              </td>
              <td colspan='1'>
                {% if item.variant.inventory_policy == 'continue' %}

                  <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0" max='-Inf'>
                  {% else %}
                  <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity}}" min="0" max='{{item.variant.inventory_quantity}}'>
                {% endif %}
              </td>
              {% comment %} <td>
                {% if item.original_line_price != item.line_price %}{{ item.original_line_price | money }}{% endif %}
                {{ item.line_price | money }}
                {% for discount in item.discounts %}{{ discount.title }}{% endfor %}
              </td> {% endcomment %}
              <td colspan='2'>{{ item.price | money }}</td>
              <td colspan='1'>
                <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <p class='subtotal'>Subtotal : {{ cart.total_price | money }}</p>
      <div class='checkout-buttons'>
        <p class='subtotal'>Subtotal : {{ cart.total_price | money }}</p>
        <button class='button black' type="submit" name="update">Update Cart</button>
        <button class='button black' type="submit" name="checkout">Checkout</button>
        {% if additional_checkout_buttons %}
          <div class="additional-checkout-buttons">
            {{ content_for_additional_checkout_buttons }}
          </div>
        {% endif %}
      </div>
    </form>
  {% else %}
  <div class='empty-cart'>
    <p>Nothing in here.</p>
    <div class='cart-vector'>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
    </div>
    <p>Browse our store and add something to your cart!</p>
  </div>
  {% endif %}
</div>

{% schema %}
    {
        "name": "Cart Contents",
        "settings": []
    }
{% endschema %}

{% style %}
.cart .title, .cart table, .cart .button, .cart .subtotal, .empty-cart p {
  font-family: Roboto, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.cart .title {
  font-style: normal;
  font-weight: 500;
  font-size: 16px;
  text-transform: uppercase;
  display: none;
}

.cart table {
  width: calc(100% - 32px);
  margin: 16px;
}

.cart tr {
}

.cart thead tr {
  text-align: left;
  display: grid;
  grid-template-columns: 1fr 15% 15% 24px;
}

.cart th {
  font-size: 1.6rem;
  font-weight: 500;
}

.cart tbody tr {
  display: grid;
  grid-template-columns: 20% 1fr 15% 15% 24px;
  justify-items: center;
  place-items:  center;
  margin-top: 8px;
}

.cart td, .cart td a {
  font-size: 1.2rem;
  font-weight: 500;
}

.cart td a {
  margin: auto;
}

.cart table img {
  /* width: 70px;
  height: 70px; */
  width: 100%;
  aspect-ratio: 1 / 1;
  object-fit: contain;
}

.cart table input {
  font-size: 1.2rem;
  line-height: 2.4rem;
  width: 32px;
  border: solid 1px black;
  text-align: center;
}

.cart table a {
  color: black;
  text-decoration: none;
}


.cart .subtotal {
  text-align: center;
}

.checkout-buttons {
  width: calc(100% - 32px);
  padding: 0 16px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.checkout-buttons .subtotal {
  display: none;
}
.cart .button {
  text-transform: capitalize;
  width: 100%;
  margin-top: 8px;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  /* height: 300px; */
  margin: auto;
  justify-content: center;
  align-items: center;
}

.empty-cart p {
  width: 70%;
  text-align: center;
  font-weight: 500;
  font-size: 1.8rem;
  margin: 24px 0;
}

.empty-cart p:last-child {
  margin-bottom: 0;
}

.empty-cart .cart-vector, .empty-cart svg {
  width: 96px;
  height: 96px;
  stroke-width: 1;
}

.empty-cart .cart-vector {
}

{% endstyle %}

