<div class='slogan'>
    {% if block.settings.caption != blank %}
        {{ section.settings.slogan }}
    {% else %}
        <p>Chesterfield's Premiere Designer Clothes Store</p>
    {% endif %}
</div>

{% schema %}
    {
        "name": "Slogan",
        "settings": [
            {
                "type" : "text",
                "id" : "slogan",
                "label" : "Custom Slogan (Leave blank for default)",
                "default" : "Chesterfield's Premiere Designer Clothes Store"
            }
        ]
    }
{% endschema %}

{%- style -%}
    .slogan {
      background-color: #1E1E1E;
      font-family: 'Comfortaa', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      color: #fff;
      font-size: 1.4rem;;
      text-align: center;
      padding: 1rem;
      margin-bottom: 20px;
    }
{%- endstyle -%}

