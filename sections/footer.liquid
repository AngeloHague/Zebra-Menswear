<div class='footer_content'>
  {% render 'dot-separator' %}

  <div class='newsletter'>
    <h3>Sign up for Email Updates</h3>
    <div>
      <form>
        <input class="email" type="text" placeholder="Enter your email address" />
        <input class="button" type="button" onclick="" value="Join" />
      </form>
    </div>
  </div>

  {% render 'dot-separator' %}

  <div class='footer'>
    <div class='contact-us section'>
      <h3>Contact Us</h3>
      <a href="mailto:{{shop.email}}"><div class='info'>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-at-sign"><circle cx="12" cy="12" r="4"></circle><path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"></path></svg>
        <p> {{ shop.email }} </p>
      </div></a>
      <a href='tel:{{shop.phone}}'><div class='info'>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone-call"><path d="M15.05 5A5 5 0 0 1 19 8.95M15.05 1A9 9 0 0 1 23 8.94m-1 7.98v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
        <p> {{ shop.phone }} </p>
      </div></a>
      <div class='info'>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
        <p> {{ shop.address.address1 }} <br>
        {{ shop.address.city }} <br>
        {{ shop.address.province }} <br>
        {{ shop.address.zip }} 
        </p>
      </div>
      <a href='http://instagram.com/{{settings.social_instagram_user}}'><div class='info'>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
        <p>@{{settings.social_instagram_user}}</p>
      </div></a>
      <a href='http://{{settings.social_facebook_link}}'><div class='info'>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
        <p>{{settings.social_facebook_link}}</p>
      </div></a>
    </div>

    <div class='dot-separator mobile-only'>
      <svg height="10" width="54">
        <circle cx="9" cy="5" r="2" fill="black" />
        <circle cx="27" cy="5" r="2" fill="black" />
        <circle cx="45" cy="5" r="2" fill="black" />
      </svg>
    </div>

    <div class='information section'>
      <h3>Information</h3>
      <ul class='links'>
        {% for link in linklists.footer.links %}
          <a href='{{link.url}}'><li>{{link.title}}</li></a>
        {% endfor %}
      </ul>
    </div>

    <div class='dot-separator mobile-only'>
      <svg height="10" width="54">
        <circle cx="9" cy="5" r="2" fill="black" />
        <circle cx="27" cy="5" r="2" fill="black" />
        <circle cx="45" cy="5" r="2" fill="black" />
      </svg>
    </div>

    <div class='shop-with-us section'>
      <h3>Shop With Us</h3>
      {%- unless shop.enabled_payment_types == empty -%}
        <ul>
          {%- for type in shop.enabled_payment_types -%}
            <li>
              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
            </li>
          {%- endfor -%}
        </ul>
      {%- endunless -%}
      <div class='closing'>
        <p>Copyright &copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: '/' }}</p>
        <p> {{ powered_by_link }} </p>
      </div>
    </div>
  </div>
</div>

  {%- style -%}
.newsletter {
  width: 100%;
  /* margin: 16px 0; */
  background-color: #1E1E1E;
  color: #fff;
}

.newsletter .email, .newsletter .button {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  color: #B6B6B6;
  font-size: 1rem;
  font-weight: 700;
  height: 32px;
  padding: 0;
  margin: 0;
}

.newsletter form {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.newsletter div {
  padding-bottom: 24px;
}

.newsletter .email {
  border: solid 2px #fff; 
  background-color: #1E1E1E;
  width: 65%;
}

.newsletter .email::placeholder {
  text-align: center;
}

.newsletter .button {
  border: solid 1px #4F607B; 
  background-color: #4F607B;
  width: 100px;
  letter-spacing: 1px;
}

.newsletter h3, .footer h3 {
  letter-spacing: 0.05rem;
  font-family: 'Comfortaa', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 1.4rem;
  font-weight: normal;
  font-weight: bold;
  text-transform: uppercase;
  text-align: center;
}

.newsletter h3 {
  padding: 16px 0;
}

.footer h3 {
  color: #1E1E1E;
  padding-bottom: 8px;
}

.footer {
  width: 100%;
  padding-bottom: 16px;
}

.footer p {
  font-family: 'Roboto', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.footer a {
  color: inherit;
  text-decoration: none;
}

.footer .contact-us .info {
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20.6rem;
  height: auto;
  padding: 8px;
}

.footer .contact-us .info:last-of-type {
  padding-bottom: 0;
}

.footer .contact-us svg {
  width: 1.8rem;
  height: 1.8rem;
}

.footer .contact-us p {
  display: block;
  font-size: 1.4rem;
  padding-left: 8px;
  width: 17.8rem;
  height: auto;
  line-height: 1.6rem;
}

.footer .information .links {
  margin: auto;
  width: 27rem;
  max-width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  list-style: none;
}

.footer .information a {
  display: inline-block;
  padding: 4px 24px;
}

.footer .information li {
  font-family: 'Roboto', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 1.2rem;
  text-align: center;
}

.footer .shop-with-us {
  padding-bottom: 0;
}

.footer .shop-with-us ul {
  display: flex;
  justify-content: center;
}

.footer .shop-with-us li {
  display: inline-block;
  padding: 4px;
}

.footer .closing {
  margin: 0;
  padding-bottom: 16px;
}

.footer .closing p {
  width: 100%;
  display: inline-block;
  margin: 0;
}

.footer .closing p, .footer .closing a {
  text-align: center;
  font-size: 1rem;
  margin: 0;
}
@media(min-width: 1000px) {
  .footer .mobile-only { display: none; }
  .footer {
    display: grid;
    padding-bottom: 48px;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-areas: 'info contact shop';
  }
  .information { grid-area: info; }
  .contact-us { grid-area: contact; }
  .shop-with-us { grid-area: shop; }
}
  {%- endstyle -%}