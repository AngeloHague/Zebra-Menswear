{%- style -%}
.nav_bar {
    height: 46px;
    width: 100%;
    background-color: #1E1E1E;
    display: flex;
    position: fixed;
    right: 0;
    z-index: 3;
}
.nav_bar .logo.desktop { display: none; }
.nav_bar ul#nav {
    list-style: none;
    background-color: #363636e6;
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    color: #fff;
    padding-top: 46px;
    position: fixed;
    height: 100%;
    overflow-y: auto;
    width: 100%;
    max-width: 300px;
    left: -300px;
	transition-duration: 0.4s;
	-moz-transition-duration: 0.4s;
	-webkit-transition-duration: 0.4s;
	-o-transition-duration: 0.4s;
}

.nav_bar ul {
    background-color: #363636e6;
    color: #fff;
    list-style: none;
    display: flex;
    flex-direction: column;
}

.nav_bar .menu-item {
    width: 100%;
}
.nav_bar ul.dropdown-menu {
    display: none;
}
.open-menu {
    display: none;
}

.nav_bar .left {
    position: fixed;
    top: 5px;
    left: 5px;
    z-index: 4;
}

.nav_bar .left .search-container {
    position: absolute;
    top: 0;
    left: 37px;
    margin-top: 1px;
    width: 45px;
    height: 45px;
    float: left;
}

.nav_bar .left  .search-container svg {
    width: 18px;
    height: 18px;
	outline: none;
	border: none;
}

.nav_bar .search {
    position: absolute;
    left: 38px;
	width: 0;
	padding: 4px 0;
	z-index: 10;
	outline: none;
	border: none;
    background-color: #1e1e1e;
    color: white;
    border-bottom: solid 2px #fff;
	transition-duration: 0.4s;
	-moz-transition-duration: 0.4s;
	-webkit-transition-duration: 0.4s;
	-o-transition-duration: 0.4s;
}
.nav_bar .search-button {
    position: absolute;
    width: 31px;
    height: 31px;
	left: clamp(100px, 50vw, 200px);
    z-index: 4;
    border: none;
    border-bottom: solid 2px #fff;
    border-radius: 0;
    opacity: 0;
}

.nav_bar .search:focus {
	width: 168px;
	width: clamp(100px, 50vw, 200px);
	padding-right: 32px;
    z-index: 3;
}

.nav_bar .search:focus + .search-button {
    cursor: pointer;
    opacity: 1;
	-moz-transition-duration: 0.4s;
	-webkit-transition-duration: 0.4s;
	-o-transition-duration: 0.4s;
}

.nav_bar .search-icon {
    display: block;
    padding: 8px;
    width: 20px;
    height: 20px;
    cursor: pointer;
}

.nav_bar .menu {
    width: 20px;
    height: 20px;
    z-index: 4;
    display: flex;
    flex-direction: column;
    justify-content: center;
    float: left;
    padding: 8px;
    // background-color: #fff;
}

.nav_bar ul li, .nav_bar ul a, .menu-link label {
    display: block;
    width: 100%;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
  font-family: 'Roboto', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 2rem;
    font-weight: 300;
    text-align: center;
    padding: 8px 0;
    cursor: pointer;
    padding: 0;
}

.nav_bar ul a, .menu-link label {
    padding: 16px 0;
}

.menu-label svg {
    position: relative;
    top: .5rem;
    width: 2rem;
}

.nav_bar .dropdown-menu .menu-link a,
.nav_bar .dropdown-menu .menu-link label {
    font-size: 1.6rem;
    text-transform: capitalize;
}

.nav_bar .menu_burger {
    position: relative;
    width: 20px;
    height: 2px;
    background-color: #fff;
    border-radius: 5px;
    transition: all .3s ease-in-out;
-moz-transition-duration: all .3s ease-in-out;
-webkit-transition-duration: all .3s ease-in-out;
-o-transition-duration: all .3s ease-in-out;
    margin: auto;
}
.nav_bar .menu_burger::before, .nav_bar .menu_burger::after {
  content: '';
  position: absolute;
  left: 0;
  width: 20px;
  height: 2px;
  background-color: #fff;
  border-radius: 5px;
  transition: all .3s ease-in-out;
-moz-transition-duration: all .3s ease-in-out;
-webkit-transition-duration: all .3s ease-in-out;
-o-transition-duration: all .3s ease-in-out;
}
.nav_bar .menu_burger::before {
    transform: translateY(-5px);
}
.nav_bar .menu .menu_burger::after {
    transform: translateY(5px);
}

#open-menu {
    /* position: absolute;
    left: 50%; */
    display: none;
}

#open-menu:checked ~ ul#nav {
    left:0px;
}
#open-menu:checked ~ .left .menu_burger {
    transform: translateX(-15px);
    background-color: transparent;
}

#open-menu:checked ~ .left .menu_burger::before {
    transform: rotate(45deg) translate(11px, -11px);
}

#open-menu:checked ~ .left .menu_burger::after {
    transform: rotate(-45deg) translate(11px, 11px);
}

#nav a:hover,
#nav label:hover {
    background-color: #5a5a5ae0;
    cursor: pointer;
}

.nav_bar .right {
    position: fixed;
    top: 10px;
    right: 0;
    height: 20px;
    width: auto;
}

.nav_bar .right .account {
    width: 20px;
    height: 20px;
    float: left;
    padding: 4px;
    margin-right: 12px;
}

.nav_bar .right .cart {
    width: 20px;
    height: 20px;
    float: right;
    padding: 4px;
    padding-right: 16px;
}

.nav_bar .right .cart svg {
    width: 18px;
    height: 18px;
}

.nav_bar .right .cart .item-count {
    position: absolute;
    right: 8px;
    top: 10px;
    width: 16px;
    height: 16px;
    background-color: #4F607B;
    border-radius: 15px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  font-family: 'Roboto', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.nav_bar .right .cart .item-count p {
    font-size: 10px;
    color: #fff;
}

.st0{fill:#FFFFFF;stroke:#FFFFFF;stroke-width:2;stroke-linecap:round;stroke-linejoin:round;}
.st1{stroke:#FFFFFF;stroke-width:2;stroke-linecap:round;stroke-linejoin:round;}
.st2{fill:#FFFFFF;stroke:#FFFFFF;stroke-width:1;stroke-linecap:round;stroke-linejoin:round;}

@media(max-width: 1179px) {
    [id^=open-submenu]:checked ~ ul.dropdown-menu {
    display: block;
    }
    [id^=open-submenu]:checked + label svg {
        /* transform: rotate(-540deg); */
        transform: rotate(180deg);
    }
}

@media(min-width: 1180px) {
    .nav_bar .menu, .nav_bar .logo.mobile { display: none; }
    .nav_bar .logo.desktop {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0;
        height: 100%;
    }
    .nav_bar .menu-link { min-width: 7rem; }

    .nav_bar .left .search-container {
        left: 0;
    }
    .nav_bar ul#nav {
        padding: 0;
        position: relative;
        top: 0; left: 0;
        max-width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        overflow: visible;
        background-color: #1e1e1e;
	transition-duration: 0s;
	-moz-transition-duration: 0s;
	-webkit-transition-duration: 0s;
	-o-transition-duration: 0s;
    }
    .nav_bar ul#nav > li, .nav_bar ul#nav > li a, .nav_bar ul#nav > li label {
        height: 100%;
    }
    .nav_bar ul {
        background-color: #1e1e1e;
    }
    .nav_bar ul li, .nav_bar ul a, .menu-link label {
        display: inline-block;
        width: auto;
    }
    .nav_bar ul li, .nav_bar ul a, .menu-link label, .nav_bar .dropdown-menu .menu-link a {
        font-size: 1.2rem;
    }
    .nav_bar ul li a, .menu-link label {
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 clamp(8px, 1.25vw, 16px);
    }
     .menu-link label svg {
        position: static;
     }
    .nav_bar .dropdown-menu {
        position: absolute;
        display: flex;
        flex=direction: column;
        width: 15rem;
        justify-content: flex-start;
        align-items: flex-start;
    }
    .nav_bar .dropdown-menu li, .nav_bar .dropdown-menu li a {
        z-index: 10;
        position: relative;
        left: 0;
        /* padding: 8px; */
        box-sizing: border-box;
        width: 100%;
        text-align: left;
        justify-content: flex-start;
        align-items: flex-start;
    }
    .nav_bar .dropdown-menu li a {
        padding: 12px 16px;
    }
    .menu-link label:hover ~ ul.dropdown-menu, ul.dropdown-menu:hover  {
        background-color: #363636;
        display: flex;
    }
    .nav_bar .logo.desktop:hover {background-color: #1e1e1e;}
    [id^=open-submenu]:checked + label svg {
        transform: none;
    }
}
{%- endstyle -%}

