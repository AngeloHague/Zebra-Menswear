<div class='collection'>
  <div class='page-title'>
      <p>{{collection.title}}</p>
  </div>
  <div class='description'>
    {{collection.description}}
  </div>

  {% render 'dot-separator' %}

  <div class='controls'>
    <div class='control' id='sort'>SORT</div>
    <div class='control' id='filter'>FILTER</div>
  </div>
    {% paginate collection.products by 6 %}
      <div class='products'>
      {% for product in collection.products %}
        <div class='product'>
          <a href="{{ product.url | within: collection }}">
            <div class='product-image'>
              <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}" width="100%" loading='lazy'>
            </div>
            <p class='vendor'>{{product.vendor}}</p>
            <p class='title'>{% render 'filtered-product-title' with product.title %}</p>
              {% if product.price < product.compare_at_price %}
                <p class='price'><span class='original'>{{ product.compare_at_price | money }}</span> {{ product.price | money }}</p> 
                <div class='badge sale'>
                  {% assign og_price = product.compare_at_price | money_without_currency %}
                  {% assign percentage = product.price | money_without_currency | divided_by: og_price %}
                  {% assign diff = 1 | minus: percentage | times: 100 %}
                  -{{ diff | round: 0 }}%
                </div>
                {%else%}<p>{{ product.price | money }}</p>
              {% endif %}
              {% unless product.available %}
                <div class='badge out-of-stock'>
                  OUT OF STOCK
                </div>
              {% endunless %}
        </a>
        </div>
        {% else %}
          <p>no matches</p>
        {% endfor %}
      </div>
      {% render 'pages' with paginate %}
    {% endpaginate %}
  </div>
  {% style %}
  .collection .page-title {
    text-transform: uppercase;
  }

  .collection .description {
    margin: 8px 20px 0;
  }

  .collection .description p, strong {
    font-family: Roboto, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 1.4rem;
  }

  .collection .description p {
    padding: 4px 0;
  }

  .collection .description strong {
    font-weight: bold;
  }

  .products {
    width: 100%;
    display: grid;
    grid-template-columns: 50% 50%;
    justify-content: space-around;
  }

  .product {
    position: relative;
    display: inline-block;
    /* height: 260px; */
    width: 160px;
    margin: auto;
    margin-bottom: 32px;
  }

  .product .vendor, .product a, .product p, .product span {
    font-family: Roboto, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 1.2rem;
    text-decoration: none;
    color: black;
  }

  .product .title {
    padding: 4px 0;
  }

  .product .price .original {
    color: black;
    text-decoration: line-through;
  }
  .product .price {
    color: #4F607B;
    font-weight: 500;
  }

  .product .vendor {
    font-size: 1.4rem;
  }

  .product .product-image {
    height: 190px;
    width: 160px;
  }

  .product .product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }

  .product .badge {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
    color: white;
    background-color: #4F607B;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.4rem;
    font-weight: 700;
    text-align: center;
  }

.product .badge.out-of-stock {
    font-size: 1rem;
    font-weight: 700;
}

.controls {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32px;
}

.controls .control {
  width: 128px;
  height: 32px;
  padding: 0 32px;
  font-family: Roboto, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-style: normal;
  font-weight: 500;
  font-size: 1.4rem;
  line-height: 32px;
  text-align: center;
}

  {% endstyle %}