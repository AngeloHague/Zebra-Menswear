{{ 'page-content.css' | asset_url | stylesheet_tag }}
<div class='page-container'>
    {% if section.settings.page_image %}
        <div class='page-banner'>
            <div class='slide'>
                <div class="bg_blur">
                    <img width='100%' height='100%' src="{{ section.settings.page_image | img_url: 'master' }}" alt="{{ section.settings.page_image.alt }}" loading="lazy">
                </div>
                <div class="content">
                    <div class="card">
                        <div class='image'>
                            <img width='100%' height='100%' src="{{ section.settings.page_image | img_url: 'master' }}" alt="{{ section.settings.page_image.alt }}" loading="lazy">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class='page-content'>
        <h1>{{ page.title }}</h1>
        <div class='content'>{{ page.content }}</div>
    </div>
</div>

{% schema %}
{
    "name": "Page Content",
    "settings": [
        {
            "type": "image_picker",
            "id": "page_image",
            "label": "Page Image"
        }
    ]
}
{% endschema %}