<div class='collection-banner'>
    {% if collection.image %}
    <div class='slide'>
        <div class="bg_blur">
            <picture>
                <source media="(max-width:390px)" srcset="{{ collection | img_url: '390x' }}, {{ collection | image_url: '780x' }} 2x ">
                <source media="(max-width:768px)" srcset="{{ collection | img_url: '768x' }}, {{ collection | image_url: '1536x' }} 2x ">
                <source srcset="{{ collection | img_url: '1024x' }}, {{ collection | img_url: '2048x' }} 2x">
                <img src="{{ collection | img_url: '1024x' }}" width='100%' height='100%'>
            </picture>
        </div>
        <div class="content">
            <div class="card">
                <div class='image'>
                    <picture>
                        <source media="(max-width:390px)" srcset="{{ collection | img_url: '390x' }}, {{ collection | img_url: '780x' }} 2x ">
                        <source media="(max-width:768px)" srcset="{{ collection | img_url: '768x' }}, {{ collection | img_url: '1536x' }} 2x ">
                        <source srcset="{{ collection | img_url: '1024x' }}, {{ collection | img_url: '2048x' }} 2x">
                        <img src="{{ collection | img_url: '1024x' }}" width='100%' height='100%'>
                    </picture>
                </div>
                <div class='caption'>
                    {{collection.title}}
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class='slide'>
        <div class="bg_blur">
            <picture>
                <source media="(max-width:390px)" srcset="{{ section.settings.fallback_image | img_url: '390x' }}, {{ collection | img_url: '780x' }} 2x ">
                <source media="(max-width:768px)" srcset="{{ section.settings.fallback_image | img_url: '768x' }}, {{ collection | img_url: '1536x' }} 2x ">
                <source srcset="{{ section.settings.fallback_image | img_url: '1024x' }}, {{ section.settings.fallback_image | img_url: '2048x' }} 2x ">
                <img src="{{ section.settings.fallback_image | img_url: '1024x' }}" width='100%' height='100%'>
            </picture>
        </div>
        <div class="content">
            <div class="card">
                <div class='image'>
                    <picture>
                        <source media="(max-width:390px)" srcset="{{ section.settings.fallback_image | img_url: '390x' }}, {{ collection | img_url: '780x' }} 2x ">
                        <source media="(max-width:768px)" srcset="{{ section.settings.fallback_image | img_url: '768x' }}, {{ collection | img_url: '1536x' }} 2x ">
                        <source srcset="{{ section.settings.fallback_image | img_url: '1024x' }}, {{ section.settings.fallback_image | img_url: '2048x' }} 2x ">
                        <img src="{{ section.settings.fallback_image | img_url: '1024x' }}" width='100%' height='100%'>
                    </picture>
                </div>
                <div class='caption'>
                    {{collection.title}}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% schema %}
{
    "name": "Collection Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "fallback_image",
            "label": "Fallback Image"
        }
    ]
}
{% endschema %}

{% style %}
.collection-banner {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 180px;
    /* background-color: rgb(124, 149, 163); */
    /* overflow: hidden; */
}

.collection-banner .content {
    height: 100%;
    overflow: hidden;
}

.collection-banner .card {
    top: 20px;
    width: 350px;
    height: 140px;
    overflow: hidden;
}

.collection-banner .card .image {
    width: 100%;
    height: 100%;
}

.collection-banner .content .caption {
    display:none;
}
@media(min-width: 800px) {
    .collection-banner {
        height: 368px;
    }
    .collection-banner .card {
        top: 10%;
        width: 75%;
        height: 80%;
    }
}

{% endstyle %}