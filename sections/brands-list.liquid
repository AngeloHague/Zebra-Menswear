{{ 'page-content.css' | asset_url | stylesheet_tag }}
<div class='page-content'>
    {% assign last_header = blank %}
    <ul class='brands'>
        {% for link in linklists.main-menu.links %}
            {% if link.links.size > 0 and (link.title == 'Brands' or link.title == 'Brands A-N' or link.title == 'Brands O-Z') %}
                {% for brand in link.links %}
                    {% assign header = brand.title | slice: 0, 1 %}
                    {% if header != last_header or last_header == blank %}
                        {% assign last_header = header %}
                        <h2>{{ header }}</h2>
                    {% endif %}
                    <li>
                        <h3><a href='{{ brand.url }}'>{{ brand.title }}</a></h3>
                        {% comment %} 
                        <a href='{{ brand.url }}' class='brand-logo'>
                            <img src="{{ brand.metafields.brand.logo.value.url }}" alt="{{ brand.title }} Logo" width='100%' height='100%'>
                        </a> 
                        {% endcomment %}
                    </li>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </ul>
</div>


{% style %}
.page-content {
    margin: 48px 32px;
}
.brands {
    margin: 16px 24px;
}
.brands h2 {
    text-align: left;
    border-bottom: solid 1px #ccc;
    padding-bottom: 8px;
}
.brands li {
    /* margin: 0 16px; */
    /* list-style: none; */
    list-style: square;
    margin-left: 24px;
    padding: 8px;
    border-bottom: solid 1px #ccc;
}
.brands h3 {
    text-align: left;
}
.brands .brand-logo, .brands .brand-logo img {
    width: 128px;
    height: 54px;
    object-fit: contain;
}
.brands .brand-logo img {
    /* object-position: left; */
}

.brands a {
    color: #4F607B;
    text-decoration: none;
    text-transform: capitalize;
}

@media(min-width: 800px) {
    .brands {
        columns: 2;
        margin: 32px 48px;
    }
}
@media(min-width: 1200px) {
    .brands { columns: 3; }
}
{% endstyle %}

{% schema %}
{
    "name": "Brands List",
    "settings": []
}
{% endschema %}